<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>详情页面</title>
    <link rel="stylesheet" href="${ctxPath}/css/layui.min.css">
</head>
<body >
<div class="layui-layout layui-layout-admin">
    <!-- 内容主体区域 -->
    <div style="padding: 15px;">
        <form class="layui-form"  onsubmit="return save('${ctxPath}/admin/hospitalization/')">
            <input type="hidden" name="id" value="${hospitalization.id}">
            <table class="layui-table">
                <colgroup>
                    <col width="150" >
                    <col width="200" >
                    <col width="200" >
                    <col width="200">
                    <col width="200">
                    <col width="200">
                    <col width="200">
                    <col width="200">
                    <col>
                </colgroup>
                <tr>
                    <td style="width: 100px">楼层：</td>
                    <td>
                        <div class="layui-form">
                            <div class="layui-form-item">
                                <select name="floor" >
                                    <option value=""></option>
                                    <option value="1" ${hospitalization.floor == '1' ? 'selected'}>一层</option>
                                    <option value="2" ${hospitalization.floor == '2' ? 'selected'}>二层</option>
                                    <option value="3" ${hospitalization.floor == '3' ? 'selected'}>三层</option>
                                    <option value="4" ${hospitalization.floor == '4' ? 'selected'}>四层</option>
                                    <option value="5" ${hospitalization.floor == '5' ? 'selected'}>五层</option>
                                </select>
                            </div>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>门牌号：</td>
                    <td>
                        <input type="text" name="door" value="${hospitalization.door}" required  lay-verify="required"  autocomplete="off" class="layui-input">
                        <input type="hidden" name="id" value="${hospitalization.id}">
                    </td>
                </tr>
                <tr>
                    <td>床号：</td>
                    <td>
                        <div class="layui-form">
                            <div class="layui-form-item">
                                <select name="bed" >
                                    <option value=""></option>
                                    <option value="1" ${hospitalization.bed == '1' ? 'selected'}>一号床</option>
                                    <option value="2" ${hospitalization.bed == '2' ? 'selected'}>二号床</option>
                                    <option value="3" ${hospitalization.bed == '3' ? 'selected'}>三号床</option>
                                    <option value="4" ${hospitalization.bed == '4' ? 'selected'}>四号床</option>
                                </select>
                            </div>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>患者</td>
                    <td>
                        <div class="layui-form">
                            <div class="layui-form-item">
                                <select name="patientId" >
                                    <option value=""></option>
                                    <%for(p in patients){%>
                                        <option value="${p.id}" ${p.id == hospitalization.patientId?'selected'}>${p.name}</option>
                                    <%}%>
                                </select>
                            </div>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>患病：</td>
                    <td>
                        <input type="text" name="medicalName" value="${hospitalization.medicalName}" required  lay-verify="required"  autocomplete="off" class="layui-input">
                    </td>
                </tr>
                <tr>
                    <td>住院时间：</td>
                    <td>
                        <input type="date" name="intime" value="${hospitalization.intime,'yyyy-MM-dd'}" required  lay-verify="required"  autocomplete="off" class="layui-input">
                    </td>
                </tr>
                <tr>
                    <td>出院时间：</td>
                    <td>
                        <input type="date" name="outtime" value="${hospitalization.outtime,'yyyy-MM-dd'}"  autocomplete="off" class="layui-input">
                    </td>
                </tr>
                <tr>
                    <td>操作：</td>
                    <td>
                        <button type="submit" class="layui-btn">${hospitalization.id != null ? '更新' : '保存'}</button>
                    </td>
                </tr>
            </table>
        </form>
    </div>
</div>
<% include("common/formFooter.btl"){} %>
</body>
</html>