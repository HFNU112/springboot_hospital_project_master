<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>详情页面</title>
    <link rel="stylesheet" href="${ctxPath}/css/layui.min.css">
</head>
<body>
<div class="layui-layout layui-layout-admin">
    <!-- 内容主体区域 -->
    <div style="padding: 15px;">
        <form class="layui-form"  onsubmit="return save('${ctxPath}/admin/drugs/')">
            <input type="hidden" name="id" value="${drugs.id}">
            <table class="layui-table">
                <colgroup>
                    <col width="150" >
                    <col width="200" >
                    <col width="200" >
                    <col>
                </colgroup>
                <tr>
                    <td style="width: 100px">药品名称：</td>
                    <td>
                        <input type="text" value="${drugs.name}" name="name" required  class="layui-input" >
                        <input type="hidden" value="${drugs.id}" name="id" required  class="layui-input" >
                    </td>
                </tr>
                <tr>
                    <td style="width: 100px">药品类型：</td>
                    <td>
                        <div class="layui-form">
                            <div class="layui-form-item">
                                <select name="type" >
                                    <option value=""></option>
                                    <option value="0" ${drugs.type==0 ? 'selected'} >颗粒剂</option>
                                    <option value="1" ${drugs.type==1 ? 'selected'} >丸剂</option>
                                    <option value="2" ${drugs.type==2 ? 'selected'} >散剂</option>
                                    <option value="3" ${drugs.type==3 ? 'selected'} >酊剂</option>
                                    <option value="4" ${drugs.type==4 ? 'selected'} >片剂</option>
                                    <option value="5" ${drugs.type==5 ? 'selected'} >胶囊剂</option>
                                </select>
                            </div>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td style="width: 100px">价格：</td>
                    <td>
                        <input type="text" value="${drugs.price}" name="price" required  class="layui-input" >
                    </td>
                </tr>
                <tr>
                    <td style="width: 100px">数量：</td>
                    <td>
                        <input type="number" value="${drugs.number}" name="number" required  class="layui-input" min="1">
                    </td>
                </tr>
                <tr>
                    <td style="width: 100px">简介：</td>
                    <td>
                        <textarea  name="text" required style="height:130px;"  class="layui-input" >
                            ${drugs.text}
                        </textarea>
                    </td>
                </tr>
                <tr>
                    <td>操作：</td>
                    <td>
                        <button type="submit" class="layui-btn">${drugs.id != null ? '更新' : '保存'}</button>
                    </td>
                </tr>
                <tbody>

                </tbody>
            </table>
        </form>
    </div>
</div>
<% include("common/formFooter.btl"){} %>
</body>
</html>