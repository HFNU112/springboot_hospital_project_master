<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>新增页面</title>
    <link rel="stylesheet" href="${ctxPath}/css/layui.min.css">
</head>
<body class="layui-layout-body">
<div class="layui-layout layui-layout-admin">
        <!-- 内容主体区域 -->
        <div style="padding: 15px;">
            <form class="layui-form"  onsubmit="return save('${ctxPath}/admin/medicalHistory/')">
                <input type="hidden" name="id" value="${medicalHistory.id}">
                <table class="layui-table">
                    <colgroup>
                        <col width="150" >
                        <col width="200" >
                        <col width="200" >
                        <col width="200">
                        <col width="200">
                        <col>
                    </colgroup>
                    <tr>
                        <td style="width: 100px">患者名称：</td>
                        <td>
                            <div class="layui-form">
                                <div class="layui-form-item">
                                <select name="patientId" >
                                    <option value=""></option>
                                    <%for(p in patients){%>
                                        <option value="${p.id}" ${p.id == medicalHistory.patientId ? 'selected'}>${p.name}</option>
                                    <%}%>
                                </select>
                                </div>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>既往病史：</td>
                        <td>
                            <input type="text" name="name" value="${medicalHistory.name}" required  lay-verify="required"  autocomplete="off" class="layui-input">
                        </td>
                    </tr>
                    <tr>
                        <td>患病时间：</td>
                        <td>
                                <input type="date" name="time" value="${medicalHistory.time}" required  lay-verify="required"  autocomplete="off" class="layui-input">
                        </td>
                    </tr>
                    <tr>
                        <td>确诊人：</td>
                        <td>
                            <select name="doctorId">
                                <option value=""></option>
                                <%for (d in doctors) {%>
                                    <option value="${d.id}" ${d.id == medicalHistory.doctorId ? 'selected'}>${d.name}</option>
                                <%}%>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td>操作：</td>
                        <td>
                            <button type="submit" class="layui-btn">${medicalHistory.id != null ? '更新' : '保存'}</button>
                        </td>
                    </tr>
                    <tbody>

                    </tbody>
                </table>
            </form>
        </div>
</div>
<% include("common/formFooter.btl"){} %>
</body>
</html>